<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matan.intellignet.WallMyPostsFragment"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:layout_weight="2"
    android:orientation="vertical"
    android:padding="30px"
    android:background="@color/tabBackgroundWall"
    android:id="@+id/writeStatus"
  >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:background="@color/colorEditTextPost"
        android:gravity="top"
        android:hint="מה השאלה שלך?"
        android:id="@+id/questionEditText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/tabBackgroundWall"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/colorEditTextPost"
            android:layout_gravity="center"
            android:hint="שם משחק"
            android:id="@+id/gameName" />

        <EditText
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorEditTextPost"
            android:layout_gravity="center"
            android:hint="מספר"
            android:id="@+id/index" />


        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="שלח"
            android:layout_gravity="center"
            android:id="@+id/sendButton" />



        </LinearLayout>

</LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="4"
        android:id="@+id/my_posts_list"
        android:divider="@color/post_devider"
        android:dividerHeight="50px"/>


</LinearLayout>
